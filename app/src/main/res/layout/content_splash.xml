<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.andanhm.healthcare.activity.Splash"
    tools:showIn="@layout/activity_splash">

    <ImageView
        android:layout_width="@dimen/_300"
        android:layout_height="@dimen/_300"
        android:layout_margin="@dimen/_50"
        android:contentDescription="@string/app_name"
        android:src="@drawable/splash_healthcare" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_50sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="@dimen/_50sp"
        android:layout_marginStart="@dimen/_50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/splash_screen_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15sp"
        android:textStyle="bold" />

</LinearLayout>
