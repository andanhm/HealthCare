<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_20"
    android:weightSum="5"
    android:clickable="true">
    <ImageView
        android:src="@drawable/ic_action_setting"
        android:tint="@color/textColorPrimary"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/title"
        android:layout_weight="3"
        android:textColor="@color/textColorPrimary"
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10"
        android:paddingStart="@dimen/_10"
        android:paddingRight="@dimen/_10"
        android:paddingEnd="@dimen/_10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/_15sp"
        android:textStyle="bold" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutNotification"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_height="match_parent" >
            <TextView
                android:id="@+id/txtNoOfNotificationReceived"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_15sp"
                android:background="@color/colorPrimaryDark"
                android:text="@string/_1"
                android:gravity="center"
                android:layout_margin="@dimen/_10"
                android:layout_width="@dimen/_60"
                android:layout_height="match_parent" />
        </LinearLayout>
</LinearLayout>
